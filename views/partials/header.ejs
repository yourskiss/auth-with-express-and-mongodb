<!-- views/partials/header.ejs -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>Teacher App</title>
   <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header class="headerpart">
    <h1>EMP Management System</h1>
    <% if (user) { %>
      <p>
        Welcome, <strong><%= user.fullname %></strong> (<%= user.role %>)
        &nbsp; ||  &nbsp; 
        <a href="/users/logout">Logout</a>
      </p>
    <% } else { %>
      <p>
        <a href="/users/register">Register</a>
          &nbsp; ||  &nbsp;
        <a href="/users/login">Login</a>
        </p>
    <% } %>
  </header>
  
 <% if (user) { %>
    <nav class="headnav">
      <% if(user.role === 'superadmin' || user.role === 'admin' ) { %>
      <p>
        <a href="/users/create">Add New</a> 
        &nbsp; ||  &nbsp; 
        <a href="/users">View All</a>
      </p>
      <% } %>
      <p>
        <a href="/users/password-change">Change Password</a>
        &nbsp; ||  &nbsp; 
        <a href="/users/dashboard">Dashboard</a>
      </p>
    </nav>
  <% } %>

</body>
</html>