<!DOCTYPE html>
<html>
<head>
  <title>Reset Password</title>
</head>
<body>
<%- include('../partials/header') %>

<section class="sectionmin">
  <h1 class="mainheading">Reset Password</h1>
  <p class="maintext">
    Please set new password for the email: <strong><%= email %></strong>
  </p>
  <form class="formpart" action="/users/password-reset" method="post">
    <% if (error) { %>
        <aside class="errormessage"><%= error %></aside>
    <% } %>
    <% if (success) { %>
        <aside class="successmessage"><%= success %></aside>
        <script>
            setTimeout(() => {
            window.location.href = '/users/login';
            }, 2000); 
        </script>
    <% } %>

    <input type="hidden" name="email" value="<%= email  || '' %>">
    <div>
      <label>New Password</label>
      <input type="text" name="password" value="<%= password || '' %>" />
    </div>
    <div>
      <label>Confirm Password</label>
      <input type="text" name="confirmPassword" value="<%= confirmPassword  || '' %>" />
    </div>
    <div>
      <button type="submit">Reset Password</button>
    </div>
  </form>
</section>

<%- include('../partials/footer', { title: 'EMP Management System' }) %>
</body>
</html>
