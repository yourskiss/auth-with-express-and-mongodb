<!DOCTYPE html>
<html>
<head>
  <title>Verify OTP</title>
</head>
<body>
<%- include('../partials/header') %>

<section class="sectionmin">
  <h1 class="mainheading">Verify OTP</h1>
  <p class="maintext">
    Please enter the 6 Digit OTP sent to your email: <strong><%= email %></strong>
  </p>
  <form class="formpart" action="/users/password-otp" method="post">
    <% if (error) { %>
      <aside class="errormessage"><%= error %></aside>
    <% } %>
    <% if (success) { %>
      <aside class="successmessage"><%= success %></aside>
      <script>
          setTimeout(() => {
            window.location.href = '/users/password-reset?email=<%= email %>';
          }, 2000); 
      </script>
    <% } %>

    <input type="hidden" name="email" value="<%= email %>">
    <div>
      <label>Enter OTP</label>
      <input type="text" name="otp" maxlength="6" required />
    </div>
    <div>
      <button type="submit">Verify OTP</button>
    </div>
  </form>
</section>

<%- include('../partials/footer', { title: 'EMP Management System' }) %>
</body>
</html>
